        {
          "expr": "avg(node_disk_io_time_weighted_seconds_total{instance=~\"$instance\"})",
          "legendFormat": "Weighted IO (s)",
          "refId": "B"
        }
      ],
      "title": "Disk IO Time",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
