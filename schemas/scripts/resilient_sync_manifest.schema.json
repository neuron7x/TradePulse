{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Resilient data sync manifest",
  "type": "object",
  "required": ["source", "target", "batches"],
  "properties": {
    "source": {
      "type": "string"
    },
    "target": {
      "type": "string"
    },
    "batches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "records"],
        "properties": {
          "id": {
            "type": "string"
          },
          "records": {
            "type": "integer",
            "minimum": 0
          },
          "status": {
            "type": "string"
          }
        }
      }
    },
    "started_at": {
      "type": "string"
    },
    "completed_at": {
      "type": "string"
    }
  }
}
