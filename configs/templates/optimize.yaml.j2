    name: optimize_backtest
    data:
      kind: csv
      path: data/sample.csv
      timestamp_field: timestamp
      value_field: price
    strategy:
      entrypoint: core.strategies.signals:moving_average_signal
      parameters:
        window: 3
    execution:
